mesh Th = square(10, 10, [x,y], flags=1);

fespace Vh(Th, P1);
fespace Zh(Th, P0);

//func h = x < 0.15;
func h = x*x + y*y > 0.25;

Vh maskone = h;
Zh maskonep = maskone > 0.25;


Zh masktwo = h;
Zh masktwop = masktwo > 0;

plot(Th, maskonep, fill=1);
plot(Th, masktwo, fill=1, wait=1);
plot(Th, masktwop, fill=1, wait=1);


